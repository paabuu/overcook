.materials-container {
  display: flex;
  flex-wrap: wrap;
}

.materials-each {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 20%;
  margin-bottom: 30rpx;
}

.material-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 1px solid skyblue;
  background-color:skyblue;
}

.material-name {
  text-align: center;
  color: #353535;
  font-size: 10pt;
}

.selected-material .material-icon {
  border: 1px solid orange;
}