/* pages/add-material/add-material.wxss */
.material-tabs-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  z-index: 10;
  background-color: #fff;
}

.material-tabs {
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 60%;
  height: 100%;
  margin: 0 auto;
}

.material-tab {
  width: 80rpx;
  font-size: 13pt;
  font-weight: bold;
  text-align: center;
  border-bottom: 6rpx solid transparent;
}

.material-tab-selected {
  color: #1296db;
  border-bottom: 6rpx solid #1296db;
}

@import '../../common.wxss';

.material-swiper {
  height: 2000rpx;
  margin-top: 100rpx;
}