/* pages/tobuy/tobuy.wxss */
@keyframes rotate {
    from {
        transform: rotate(0deg);
    }
    to {
        transform: rotate(360deg);
    }
}

.recipe-container {
    background-color: #efefef;
    padding: 20rpx 20rpx 50rpx;
    box-sizing: border-box;
    min-height: 100vh;
}
.search {
    display: flex;
    box-sizing: border-box;
    height: 80rpx;
    margin-bottom: 20rpx;
}

.search input {
    width: 100%;
    height: 100%;
    font-size: 14pt;
    box-sizing: border-box;
    padding: 0 20rpx;
    font-size: 12pt;
    background-color: #fff;
}

.keyword-placeholder {
    font-size: 12pt;
}

.search-button {
    width: 200rpx;
    height: 100%;
    border-radius: 0;
    font-size: 12pt;
    line-height: 80rpx;
    border: none;
    background-color: #09bb07;
    color: #fff;
    text-align: center;
}

.search-button_hover {
    /* background-color: #09bb07; */
    opacity: .8;
}

.recipe-list {
}

.recipe-list .recipe-each {
    margin-bottom: 20rpx;
    background-color: #fff;
    border-bottom: 1px solid #efefef;
}

.recipe-list .recipe-each image {
    width: 100%;
    display: block;
}

.recipe-title {
    line-height: 80rpx;
    font-size: 14pt;
    font-weight: bold;
    padding-left: 20rpx;
    box-sizing: border-box;
}

.loading {
    display: flex;
    justify-content: center;
    margin-top: 20rpx;
}

.loading image {
    width: 50rpx;
    height: 50rpx;
    margin: 0 auto;
    animation: rotate linear 1.5s infinite;
}