/**index.wxss**/
.empty-text {
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  font-weight: bold;
  color: #1296db;
}

.empty-text image {
  width: 100%;
}

.container {
  padding: 0 20rpx;
  box-sizing: border-box;
}
.materials-container {
  display: flex;
  flex-wrap: wrap;
}

.material-category {
  position: relative;
  margin-bottom: 20rpx;
  margin-left: 22rpx;
  line-height: 1;
}

.material-category text {
  font-size: 14pt;
  line-height: 1;
  color: #666;
  font-weight: bold;
  margin-left: 20rpx;
}

.material-category::before {
  content: '';
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  width: 8rpx;
  height: 100%;
  background-color: #1296db;
}

@import '../../common.wxss'
